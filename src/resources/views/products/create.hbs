<div class="container mt-4" style="max-width: 700px;">
    <div class="card shadow-sm rounded-4">
        <div class="card-body p-4">
            <h3 class="fw-bold mb-4 text-center">
                <i class="bi bi-plus-circle me-2"></i>Thêm sản phẩm mới
            </h3>

            <form method="POST" action="/products/store" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="name" class="form-label fw-semibold">
                        <i class="bi bi-cup-straw me-1"></i>Tên sản phẩm
                    </label>
                    <input type="text" class="form-control rounded-3" id="name" name="name"
                        placeholder="Nhập tên sản phẩm" required>
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label fw-semibold">
                        <i class="bi bi-cash-stack me-1"></i>Giá sản phẩm (đ)
                    </label>
                    <input type="number" class="form-control rounded-3" id="price" name="price" placeholder="Nhập giá"
                        min="0" required>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label fw-semibold">
                        <i class="bi bi-image me-1"></i>Hình ảnh
                    </label>
                    <input type="file" class="form-control rounded-3" id="image" name="image" accept="image/*" required>

                    <div class="mt-3 text-center">
                        <img id="preview-image" class="img-thumbnail rounded-3 d-none" style="max-height: 200px;"
                            alt="Preview ảnh">
                    </div>
                </div>

                <div class="mb-4">
                    <label for="description" class="form-label fw-semibold">
                        <i class="bi bi-card-text me-1"></i>Mô tả
                    </label>
                    <textarea name="description" id="description" class="form-control rounded-3" rows="4"
                        placeholder="Mô tả sản phẩm..."></textarea>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="/products/list" class="btn btn-outline-secondary rounded-pill px-4">
                        <i class="bi bi-arrow-left me-1"></i>Quay lại
                    </a>

                    <button type="submit" class="btn btn-success rounded-pill px-4">
                        <i class="bi bi-save me-1"></i>Thêm sản phẩm
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    const imageInput = document.getElementById('image')
    const previewImage = document.getElementById('preview-image')

    imageInput.addEventListener('change', function () {
        const file = this.files[0]

        if (file) {
            const reader = new FileReader()

            reader.onload = function (e) {
                previewImage.src = e.target.result
                previewImage.classList.remove('d-none')
            }

            reader.readAsDataURL(file)
        } else {
            previewImage.src = ''
            previewImage.classList.add('d-none')
        }
    })
</script>