<div class="container mt-4" style="max-width: 700px;">
    <div class="card shadow-sm rounded-4">
        <div class="card-body p-4">
            <h3 class="fw-bold mb-4 text-center">
                <i class="bi bi-pencil-square me-2"></i>Cập nhật sản phẩm
            </h3>

            <form method="POST" action="/products/{{product._id}}/update?_method=PUT" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="name" class="form-label fw-semibold">
                        <i class="bi bi-cup-straw me-1"></i>Tên sản phẩm
                    </label>
                    <input type="text" class="form-control rounded-3" id="name" name="name" value="{{product.name}}"
                        placeholder="Nhập tên sản phẩm" required>
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label fw-semibold">
                        <i class="bi bi-cash-stack me-1"></i>Giá sản phẩm (đ)
                    </label>
                    <input type="number" class="form-control rounded-3" id="price" name="price"
                        value="{{product.price}}" placeholder="Nhập giá" min="0" required>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">
                        <i class="bi bi-image me-1"></i>Hình ảnh
                    </label>
                    <input type="hidden" name="oldImage" value="{{product.image}}">

                    <input type="file" class="form-control rounded-3" id="image" name="image" accept="image/*">
                </div>
                <div class="mb-3 text-center">
                    <img id="preview-image" src="{{product.image}}" class="img-thumbnail rounded-3"
                        style="max-height: 180px;">
                </div>

                <div class="mb-4">
                    <label for="description" class="form-label fw-semibold">
                        <i class="bi bi-card-text me-1"></i>Mô tả
                    </label>
                    <textarea name="description" id="description" class="form-control rounded-3" rows="4"
                        placeholder="Mô tả sản phẩm...">{{product.description}}</textarea>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="/products/list" class="btn btn-outline-secondary rounded-pill px-4">
                        <i class="bi bi-arrow-left me-1"></i>Quay lại
                    </a>

                    <button type="submit" class="btn btn-primary rounded-pill px-4">
                        <i class="bi bi-save me-1"></i>Cập nhật
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    const imageInput = document.getElementById('image')
    const previewImage = document.getElementById('preview-image')

    imageInput.addEventListener('change', function () {
        const file = this.files[0]

        if (file) {
            const reader = new FileReader()
            reader.onload = e => previewImage.src = e.target.result
            reader.readAsDataURL(file)
        }
    })
</script>